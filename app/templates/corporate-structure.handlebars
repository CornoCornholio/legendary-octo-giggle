<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- mobile friendly, no scaling-->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="./favicon.ico">

    <title>Base Page</title>

    <!-- bower:css -->
    <!-- bower installed css files will go here... -->
    <!-- endinject -->
    <!-- inject:css -->
    <!-- endinject -->

    <link rel="stylesheet" href="/dist/siteassets/css/card.css">

</head>

<body>
    {{> menubar}}
    <div class="container">
        <div class="row">
            <div class="col-sm-12 ">
                <div class="lib-panel lib-panel-inverse">
                    <div class="row box-shadow" style="background-color: rgb(25, 54, 92);">
                        <div class="col-md-2">
                            <img class="lib-img-show" src="https://randomuser.me/api/portraits/men/99.jpg">
                        </div>
                        <div class="col-md-10">
                            <div class="lib-row lib-header">
                                <h2>{{fullName}}</h2>
                                <h3>{{role}}, {{area}}</h3>
                                <div class="lib-header-seperator"></div>
                            </div>
                            <div class="lib-row lib-desc">
                                <p>
                                    {{bio}}
                                </p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12 ">
                <div class="card-deck-wrapper">
                    <div class="card-deck">
                        {{#each staff}}
                            <div class="card card-inverse {{group}}" data-staff="staff-{{group}}">
                                <img class="card-img-top" src="{{randImageUrl gender}}" alt="{{fullName}}">
                                <div class="card-block">
                                    <h4 class="card-title">{{fullName}}</h4>
                                    <p class="card-text">{{job}}
                                        <br/>{{area}}</p>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            {{#each staff}}
                {{#if staff}}
                    <!--render staff-->

                    <div id="staff-{{group}}" class="col-sm-12 staff">
                        <div class="card-deck-wrapper">
                            <div class="card-deck">

                                {{#each staff}}
                                    <div class="card card-inverse {{group}}-{{priority}}" data-staff="staff-{{group}}">
                                        <img class="card-img-top" src="{{randImageUrl gender}}" alt="{{fullName}}">
                                        <div class="card-block">
                                            <h4 class="card-title">{{fullName}}</h4>
                                            <p class="card-text">{{job}}
                                                <br/>{{area}}</p>
                                        </div>
                                        <ul class="staff-list">
                                            {{#each staff}}
                                                <li class="{{group}}-{{priority}}">
                                                    <span class="image">
                                                      <img class="card-img-top" src="{{randImageUrl gender}}" alt="{{fullName}}" />
                                                    </span>
                                                    <div>
                                                        <h5>{{fullName}}</h5>
                                                        <p>{{job}}
                                                            <br/>{{area}}</p>
                                                    </div>
                                                </li>
                                            {{/each}}
                                        </ul>
                                    </div>
                                {{/each}}
                            </div>

                        </div>
                    </div>

                {{else}}
                    <!--no staff-->
                {{/if}}


            {{/each}}
        </div>
    </div>
    </div>

    <!-- Placed at the end of the document so the pages load faster -->
    <!-- bower:js -->
    <!-- bower installed scripts will go here... -->
    <!-- endinject -->
    <!-- inject:js -->
    <!-- app scripts will go here... -->
    <!-- endinject -->
</body>

</html>
